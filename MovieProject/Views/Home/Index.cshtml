@model List<Movie> // the model is our list of movies
<h2>My Movie List</h2>
<div class="mb-2">
	<a asp-controller="Movie" asp-action="Add" class="btn btn-outline-primary">Add a New Movie</a>
	@* asp-controller="Movie" will take us to the MovieController... and asp-action="Add" will take us to the method (Add) in the same controller *@
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Year</th>
			<th>Rating</th>
			<th>Genre</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var movie in Model) //we are looping throw a movies, for each movie we are displaying a row
		{
			<tr>
				<td>@movie.Name</td>
				<td>@movie.Description</td>
				<td>@movie.Year</td>
				<td>@movie.Genre.Name</td>
				<td>@movie.Rating</td>
				<td>
					<a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a> 
					<a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a>
				</td> @* asp-route-id is generating a URL with the movieId in the end of the route *@
			</tr>
		} 
	</tbody>
</table>
